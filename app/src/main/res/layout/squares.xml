<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/all">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="NBack"
                    android:id="@+id/nback"
                    android:layout_gravity="center_horizontal" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_weight="0.27"
                    android:progress="50"
                    android:progressBackgroundTint="@android:color/holo_red_dark"
                    android:secondaryProgressTint="@android:color/holo_green_dark"
                    android:progressTint="@android:color/holo_red_dark"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Level"
                    android:id="@+id/levels" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#538fae"
                        android:id="@+id/two"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="false"
                        android:layout_marginLeft="70dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#932222"

                        android:id="@+id/one"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/two"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#2f487c"
                        android:id="@+id/three"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/one" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#538fae"
                        android:id="@+id/four"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="70dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#932222"
                        android:id="@+id/five"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/four" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#2f487c"
                        android:id="@+id/six"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/five" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#538fae"
                        android:id="@+id/seven"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="70dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#932222"
                        android:id="@+id/eight"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/seven" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#2f487c"
                        android:id="@+id/nine"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/eight" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="press"
                android:id="@+id/button" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>